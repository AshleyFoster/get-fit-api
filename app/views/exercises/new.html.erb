<div class="exercise-new">
  <h1>Add an exercise</h1>
  <%= form_for(@exercise) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.label :muscle_groups %>
    <% Exercise::MUSCLE_GROUPS.each do |group| %>
      <div class="muscle">
        <%= f.check_box :muscle_group, { multiple: true }, group, nil %>
        <%= f.label "muscle_group_#{group.parameterize.underscore.downcase}", group, class: "muscle-name" %>
      </div>
    <% end %>

  <div class="submit">
    <%= f.submit %>
  </div>
<% end %>
</div>
